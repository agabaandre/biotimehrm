# Use the official PHP 8.1 CLI image for cron jobs
FROM php:8.1-cli

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PHP_TIMEZONE=Africa/Nairobi
ENV NODE_VERSION=18

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libfreetype6-dev \
    libjpeg62-turbo-dev \
    libpng-dev \
    libwebp-dev \
    libxpm-dev \
    libgd-dev \
    libmemcached-dev \
    libssl-dev \
    libcurl4-openssl-dev \
    libicu-dev \
    unzip \
    zip \
    cron \
    supervisor \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js and npm
RUN curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash - \
    && apt-get install -y nodejs \
    && npm install -g npm@latest

# Install PHP extensions
RUN docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp --with-xpm \
    && docker-php-ext-install \
        pdo_mysql \
        mbstring \
        exif \
        pcntl \
        bcmath \
        gd \
        zip \
        intl \
        opcache \
        mysqli \
        curl \
        xml \
        soap \
        ftp \
        calendar \
        sysvmsg \
        sysvsem \
        sysvshm \
        wddx \
        shmop \
        sockets \
        gettext \
        iconv \
        ctype \
        session \
        tokenizer \
        json \
        filter \
        hash \
        openssl \
        phar \
        posix \
        readline \
        reflection \
        spl \
        standard \
        date \
        libxml \
        dom \
        simplexml \
        xmlreader \
        xmlwriter \
        xmlrpc \
        xsl

# Install additional PHP extensions via PECL
RUN pecl install \
    redis \
    memcached \
    apcu \
    && docker-php-ext-enable \
        redis \
        memcached \
        apcu

# Install Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Set working directory
WORKDIR /var/www/html

# Copy PHP configuration files
COPY docker/php/php.ini /usr/local/etc/php/php.ini
COPY docker/php/opcache.ini /usr/local/etc/php/conf.d/opcache.ini

# Create necessary directories
RUN mkdir -p /var/www/html/uploads \
    && mkdir -p /var/www/html/logs \
    && mkdir -p /var/www/html/cache \
    && mkdir -p /var/www/html/temp \
    && chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html

# Copy package files first for better caching
COPY package*.json ./

# Install Node.js dependencies
RUN npm ci --only=production

# Copy project files
COPY . /var/www/html

# Install Composer dependencies
RUN composer install --no-dev --optimize-autoloader --no-scripts

# Build frontend assets (if there are build scripts)
RUN if [ -f "package.json" ] && grep -q "\"build\"" package.json; then \
        npm run build; \
    fi

# Set proper permissions
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html \
    && chmod -R 777 /var/www/html/uploads \
    && chmod -R 777 /var/www/html/logs \
    && chmod -R 777 /var/www/html/cache \
    && chmod -R 777 /var/www/html/temp

# Create cron job for duty roster summary
RUN echo "0 2 * * * cd /var/www/html && php index.php cronjobs/DutyRosterSummaryCron/updateDutyRosterSummary >> /var/www/html/logs/cron.log 2>&1" | crontab -

# Create supervisor configuration for cron
RUN mkdir -p /etc/supervisor/conf.d
COPY docker/supervisor/cron.conf /etc/supervisor/conf.d/cron.conf

# Create startup script
COPY docker/scripts/start-cron.sh /start-cron.sh
RUN chmod +x /start-cron.sh

# Expose port 9000 for PHP CLI
EXPOSE 9000

# Start cron service
CMD ["/start-cron.sh"]
