# Database Configuration (Remote or Host Machine)
# If database is on the host machine, use host.docker.internal
# If database is remote, use the actual IP/hostname
DB_HOST=host.docker.internal
DB_NAME=attend
DB_USER=your_db_user
DB_PASS=your_db_password
DB_PORT=3306

# PHP Configuration
PHP_TIMEZONE=Africa/Nairobi
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080

# Session Configuration
SESSION_EXPIRATION=21600
SESSION_GC_MAXLIFETIME=21600

# File Upload Configuration
UPLOAD_MAX_FILESIZE=100M
POST_MAX_SIZE=100M

# Cron Configuration
CRON_DUTY_ROSTER_ENABLED=true
CRON_DUTY_ROSTER_SCHEDULE="0 2 * * *"

# Web Application Port
WEB_PORT=8080
HTTPS_PORT=8443
